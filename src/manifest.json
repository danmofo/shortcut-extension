{
	"manifest_version": 2,
	"name": "Shortcut extension",
	"version": "1.0.0",
	"background": {
		"persistent": true,
		"scripts": [
			"./background/utils.js",
			"./background/storage.js",
			"./background/shortcut.js",
			"./background/background.js"
		]
	},
	"content_scripts": [
		{
			"run_at": "document_start",
			"matches": ["<all_urls>"],
			"js": ["./content-script.js"]
		}
	],
	"permissions": [
		"webNavigation"
	],
	"web_accessible_resources": [
		"./background/config.json"
	]
}